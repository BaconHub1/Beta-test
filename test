-- Sus Script List
local susScripts = {
    {name = "üéØ Bang V2", r6 = "https://pastebin.com/raw/aPSHMV6K", r15 = "https://pastebin.com/raw/1ePMTt9n"},
    {name = "üéâ Get Banged", r6 = "https://pastebin.com/raw/zHbw7ND1", r15 = "https://pastebin.com/raw/7hvcjDnW"},
    {name = "üí• Suck", r6 = "https://pastebin.com/raw/SymCfnAW", r15 = "https://pastebin.com/raw/p8yxRfr4"},
    {name = "üî• Get Suc", r6 = "https://pastebin.com/raw/FPu4e2Qh", r15 = "https://pastebin.com/raw/DyPP2tAF"},
    {name = "‚ö° Jerk", r6 = "https://pastefy.app/wa3v2Vgm/raw", r15 = "https://pastefy.app/YZoglOyJ/raw"},
    {name = "üíÉ Twerk (Nicki)", r6 = nil, r15 = "https://pastebin.com/raw/88ngjvrb"},
}

-- Rig type detector
local function getRig()
    local plr = game.Players.LocalPlayer
    local char = plr.Character or plr.CharacterAdded:Wait()
    local hum = char:WaitForChild("Humanoid")
    return hum.RigType == Enum.HumanoidRigType.R15 and "r15" or "r6"
end

-- Create GUI
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "SussyHubGUI"
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Main GUI frame
local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0, 300, 0, 350)
main.Position = UDim2.new(0.5, -150, 0.5, -175)
main.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
main.Active = true
main.Draggable = true
Instance.new("UICorner", main).CornerRadius = UDim.new(0, 8)

local mainStroke = Instance.new("UIStroke", main)
mainStroke.Color = Color3.fromRGB(255, 0, 80)

local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundTransparency = 1
title.Text = "üí¶ Sussy Hub üí¶"
title.TextColor3 = Color3.fromRGB(255, 0, 80)
title.Font = Enum.Font.GothamBlack
title.TextSize = 20

-- Buttons for each sus script
local y = 50
for _, scriptData in ipairs(susScripts) do
    local btn = Instance.new("TextButton", main)
    btn.Size = UDim2.new(0.9, 0, 0, 35)
    btn.Position = UDim2.new(0.05, 0, 0, y)
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 16
    btn.Text = scriptData.name
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    local btnStroke = Instance.new("UIStroke", btn)
    btnStroke.Color = Color3.fromRGB(255, 0, 80)

    btn.MouseButton1Click:Connect(function()
        local rig = getRig()
        local url = scriptData[rig]
        if url then
            pcall(function()
                loadstring(game:HttpGet(url))()
            end)
        else
            warn("Script not available for " .. rig .. ": " .. scriptData.name)
        end
    end)

    y = y + 40
end

-- Toggle Button
local toggle = Instance.new("TextButton", gui)
toggle.Size = UDim2.new(0, 110, 0, 30)
toggle.Position = UDim2.new(0, 10, 0, 10)
toggle.Text = "üôà Hide Hub"
toggle.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
toggle.Font = Enum.Font.GothamBold
toggle.TextSize = 14
toggle.Active = true
toggle.Draggable = true
Instance.new("UICorner", toggle).CornerRadius = UDim.new(0, 6)
local toggleStroke = Instance.new("UIStroke", toggle)
toggleStroke.Color = Color3.fromRGB(255, 0, 80)

-- RGB Stroke Effect
task.spawn(function()
    local colors = {
        Color3.fromRGB(255, 0, 80),
        Color3.fromRGB(0, 255, 127),
        Color3.fromRGB(0, 170, 255),
        Color3.fromRGB(255, 170, 0),
        Color3.fromRGB(170, 0, 255),
    }
    while true do
        for _, color in ipairs(colors) do
            toggleStroke.Color = color
            mainStroke.Color = color
            wait(0.2)
        end
    end
end)

-- Toggle logic
local showing = true
toggle.MouseButton1Click:Connect(function()
    showing = not showing
    main.Visible = showing
    toggle.Text = showing and "üôà Hide Hub" or "üëÅ Show Hub"
end)

-- Freaky Person Notification
local notif = Instance.new("Frame", gui)
notif.Size = UDim2.new(0, 250, 0, 80)
notif.Position = UDim2.new(0.5, -125, 0.2, 0)
notif.BackgroundColor3 = Color3.fromRGB(40, 0, 60)
notif.BackgroundTransparency = 0.1
notif.Active = true
notif.Draggable = true
Instance.new("UICorner", notif).CornerRadius = UDim.new(0, 10)
local notifStroke = Instance.new("UIStroke", notif)
notifStroke.Color = Color3.fromRGB(255, 0, 200)
notifStroke.Thickness = 2

local msg = Instance.new("TextLabel", notif)
msg.Size = UDim2.new(1, -10, 1, -10)
msg.Position = UDim2.new(0, 5, 0, 5)
msg.BackgroundTransparency = 1
msg.Text = "You are a freaky person üëÖ"
msg.Font = Enum.Font.GothamBold
msg.TextColor3 = Color3.fromRGB(255, 255, 255)
msg.TextScaled = true
msg.TextWrapped = true

-- Auto hide notification
task.delay(5, function()
    notif:Destroy()
end)
